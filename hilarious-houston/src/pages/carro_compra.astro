---
import Header from '../components/Header.jsx';
const url = "http://localhost:3000/webpay/crear";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/inicio.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
  <Header client:load />
  <div class="body_carrocompra">
    <div class="container py-5 ">
      <h1 class="mb-5">Tu carrito de compra</h1>
      <div class="row">
        <div class="col-lg-8">
          <!-- productos -->
          <div class="card mb-4">
            <div class="card-body"></div>
          </div>
          <!-- volver a productos -->
          <div class="text-start mb-4">
            <a href="/productos" class="btn btn-outline-warning text-dark">Continuar comprando</a>
          </div>
        </div>
        <div class="col-lg-4">
          <!-- Cart Summary -->
          <div class="card cart-summary">
            <div class="card-body"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="module" src="/src/scripts/carro_compra.js"></script>
  </body>
</html>
