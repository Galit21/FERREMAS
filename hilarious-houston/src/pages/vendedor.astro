---
import "../scripts/vendedor.js";
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vendedor</title>
    <link rel="stylesheet" href="/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body class="fondo">
    <div class="container-fluid vh-100">
      <div class="row h-100">
        <div class="col-3 sidebar">
          <h1>Ventas</h1>
          <button class="btn btn-primary w-100 mb-3" onclick="mostrarContenido('pedidos')">
            Gestionar Pedidos
          </button>
          <button class="btn btn-primary w-100 mb-3" onclick="mostrarContenido('inventario')">
            Gestionar Inventario
          </button>
          <button class="btn btn-primary w-100" onclick="mostrarContenido('crearOrden')">
            Crear Orden
          </button>
        </div>
        <div class="col-9 main-content">
          <div id="contenido" class="content-box"></div>
        </div>
      </div>
    </div>
  </body>
</html>